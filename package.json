{
  "name": "hook-style",
  "version": "1.3.0",
  "description": "Style and theme your React components with Hooks",
  "keywords": [
    "react hook",
    "style",
    "tagged template"
  ],
  "license": "Unlicense",
  "contributors": [
    "Colin Gourlay <colin@colin-gourlay.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/colingourlay/hook-style.git"
  },
  "main": "dist/hook-style.js",
  "module": "dist/hook-style.mjs",
  "source": "src/hook-style.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "concurrently -k \"npm:example:*\"",
    "example:serve": "http-server example --silent",
    "example:watch": "microbundle watch --no-compress --entry example/src/index.tsx --globals react=React,react-dom=ReactDOM --format umd --jsx React.createElement --output example/dist/bundle.js",
    "clean": "rimraf dist",
    "watch": "npm run clean && microbundle watch --no-compress --format cjs,es",
    "build": "npm run clean && microbundle --no-compress --format cjs,es --sourcemap=false",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "concurrently": "^4.1.0",
    "http-server": "^0.11.1",
    "microbundle": "^0.11.0",
    "react": "^16.8.4",
    "rimraf": "^2.6.3"
  },
  "peerDependencies": {
    "react": "^16.8.4"
  }
}
